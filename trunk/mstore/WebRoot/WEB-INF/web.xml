<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.5" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee   http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/spring/spring.xml</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.web.util.IntrospectorCleanupListener</listener-class>
  </listener>
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>forceEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>openSessionInViewFilter</filter-name>
    <filter-class>cn.infogiga.sd.filther.MyOpenSessionInViewFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>openSessionInViewFilter</filter-name>
    <url-pattern>/system</url-pattern>
    <url-pattern>/json</url-pattern>
    <url-pattern>/mamager</url-pattern>
    <url-pattern>/mamager/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>loginFilter</filter-name>
    <filter-class>cn.infogiga.sd.filther.LoginFilther</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>loginFilter</filter-name>
    <url-pattern>/admin</url-pattern>
    <url-pattern>/menu</url-pattern>
    <url-pattern>/manager</url-pattern>
    <url-pattern>/manager/*</url-pattern>
  </filter-mapping>
  <!-- Processes application requests -->
  <servlet>
    <servlet-name>spring-servlet</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/spring/controller-servlet.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
 
  <servlet-mapping>
    <servlet-name>spring-servlet</servlet-name>
    <url-pattern>/admin</url-pattern>
    <url-pattern>/menu</url-pattern>
    <url-pattern>/p</url-pattern>
    <url-pattern>/m</url-pattern>
    <url-pattern>/login</url-pattern>
    <url-pattern>/power</url-pattern>
    <url-pattern>/power/*</url-pattern>
    <url-pattern>/province</url-pattern>
    <url-pattern>/province/*</url-pattern>
    <url-pattern>/city</url-pattern>
    <url-pattern>/city/*</url-pattern>
    <url-pattern>/hall</url-pattern>
    <url-pattern>/hall/*</url-pattern>
    <url-pattern>/equipment</url-pattern>
    <url-pattern>/equipment/*</url-pattern>
    <url-pattern>/user</url-pattern>
    <url-pattern>/user/*</url-pattern>
    <url-pattern>/phonebrand</url-pattern>
    <url-pattern>/phonebrand/*</url-pattern>
    <url-pattern>/phonearray</url-pattern>
    <url-pattern>/phonearray/*</url-pattern>
    <url-pattern>/platform</url-pattern>
    <url-pattern>/platform/*</url-pattern>
    <url-pattern>/phonetype</url-pattern>
    <url-pattern>/phonetype/*</url-pattern>
    <url-pattern>/softmenu</url-pattern>
    <url-pattern>/softmenu/*</url-pattern>
    <url-pattern>/image</url-pattern>
    <url-pattern>/image/*</url-pattern>
    <url-pattern>/soft</url-pattern>
    <url-pattern>/soft/*</url-pattern>
    <url-pattern>/downloadstat</url-pattern>
    <url-pattern>/downloadstat/*</url-pattern>
    <url-pattern>/manager</url-pattern>
    <url-pattern>/manager/*</url-pattern>
    <url-pattern>/category</url-pattern>
    <url-pattern>/category/*</url-pattern>
    <url-pattern>/attachment</url-pattern>
    <url-pattern>/attachment/*</url-pattern>
    <url-pattern>/web</url-pattern>
    <url-pattern>/webLogin</url-pattern>
    <url-pattern>/web/*</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>/login.jsp</welcome-file>
  </welcome-file-list>
</web-app>

