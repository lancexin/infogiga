<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>    
      <bean id="saveProjectJob" class="org.springframework.scheduling.quartz.JobDetailBean">
         <property name="jobClass">
	         <value>
	         	cn.infogiga.quartz.service.ParseFileQuartz
	         </value>
        </property>
        
         <property name="jobDataAsMap">
	        <map>
		        <entry key="appointmentService">
		        	<ref bean="AppointmentService" />
		        </entry>
		        <entry key="notification">
		        	<ref bean="notificationImpl"/>
		        </entry>
	        </map>
        </property>
   </bean>
   
    <bean id="saveCron" 
    	class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail">
            <ref local="saveProjectJob" />
        </property>
        <property name="cronExpression">
            <value>0 0 17 * * ?</value>
        </property>
    </bean>
    
    <bean id="scheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
           <ref local="saveCron" />
        </property>
    </bean>
    
</beans>